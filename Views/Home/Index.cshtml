@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Odhlásit se</button>
        </form>
    }

    <nav>
        <ul>
            <li><a href="@Url.Action("Login", "Account")">Přihlásit se</a></li>
            <li><a href="@Url.Action("Calendar", "Reservation")">Rezervovat chatku</a></li>
            <li><a href="@Url.Action("Availability", "Home")">Zobrazit obsazenost</a></li>
        </ul>
    </nav>
</div>