@using System.Security.Claims
@model ChatkaReservation.Models.Rezervace

@{
    ViewData["Title"] = "Upravit rezervaci";
}

<h1>Upravit rezervaci</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DatumOd" class="control-label"></label>
        <input asp-for="DatumOd" class="form-control" />
        <span asp-validation-for="DatumOd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DatumDo" class="control-label"></label>
        <input asp-for="DatumDo" class="form-control" />
        <span asp-validation-for="DatumDo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChatkaId" class="control-label"></label>
        <select asp-for="ChatkaId" class="form-control" asp-items="ViewBag.Chatky"></select>
        <span asp-validation-for="ChatkaId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="UzivatelId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
    <div class="form-group">
        <input type="submit" value="Uložit změny" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Zpět na seznam</a>